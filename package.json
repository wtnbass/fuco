{
  "name": "fuco",
  "version": "2.0.0-next.2",
  "description": "Function Component like React, but for Web Components",
  "type": "module",
  "main": "dist/fuco.production.mjs",
  "module": "dist/fuco.production.mjs",
  "typings": "dist/fuco.d.ts",
  "exports": {
    ".": {
      "development": "./dist/fuco.development.js",
      "default": "./dist/fuco.production.js"
    },
    "./fuco": {
      "development": "./dist/fuco.development.js",
      "default": "./dist/fuco.production.js"
    },
    "./fuco.js": {
      "development": "./dist/fuco.development.js",
      "default": "./dist/fuco.production.js"
    },
    "./server": {
      "development": "./dist/server.development.js",
      "default": "./dist/server.production.js"
    },
    "./server.js": {
      "development": "./dist/server.development.js",
      "default": "./dist/server.production.js"
    }
  },
  "files": [
    "dist",
    "!dist/__tests__",
    "src",
    "!src/__tests__"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "run-s lint build testall",
    "testall": "run-p test:*",
    "test:node": "nyc mocha src/__tests__/*.spec.ts",
    "test:browser": "karma start",
    "lint": "run-p lint:*",
    "lint:types": "tsc --noEmit",
    "lint:eslint": "eslint src --ext .ts",
    "fmt": "prettier --write src",
    "clean": "rimraf dist coverage",
    "distclean": "npm run clean && rm -fr node_modules package-lock.json",
    "prepare": "run-s clean build",
    "sizecheck": "node scripts/sizecheck.js",
    "mergecover": "lcov-result-merger 'coverage/*/lcov.info' coverage/lcov.log && genhtml -q --branch-coverage -function-coverage -o coverage coverage/lcov.log"
  },
  "keywords": [
    "webcomponents",
    "lit-html",
    "hooks"
  ],
  "author": "Keisuke Watanabe",
  "license": "MIT",
  "homepage": "https://github.com/wtnbass/fuco",
  "repository": "wtnbass/fuco",
  "devDependencies": {
    "@rollup/plugin-replace": "2.3.4",
    "@types/chai": "4.2.14",
    "@types/karma": "5.0.1",
    "@types/karma-coverage-istanbul-reporter": "2.1.0",
    "@types/karma-webpack": "2.0.8",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.22",
    "@types/sinon": "9.0.10",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "chai": "4.2.0",
    "cross-env": "7.0.3",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.2.0",
    "istanbul-instrumenter-loader": "3.0.1",
    "karma": "6.0.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-firefox-launcher": "2.1.0",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "karma-sourcemap-loader": "0.3.8",
    "karma-webpack": "4.0.2",
    "lcov-result-merger": "3.1.0",
    "mocha": "8.2.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "puppeteer": "5.5.0",
    "rimraf": "3.0.2",
    "rollup": "2.38.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.29.0",
    "sinon": "9.2.4",
    "size-plugin-core": "0.0.9",
    "ts-loader": "8.0.14",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "webpack": "4.46.0"
  },
  "mocha": {
    "require": "ts-node/register"
  },
  "nyc": {
    "reporter": [
      "lcovonly"
    ],
    "report-dir": "./coverage/node",
    "temp-dir": "./node_modules/.temp/.nyc_output"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "prefer-rest-params": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-empty-function": 0,
      "@typescript-eslint/no-unused-vars": [
        1,
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0
    },
    "overrides": [
      {
        "files": [
          "*.d.ts"
        ],
        "rules": {
          "no-var": 0
        }
      },
      {
        "files": [
          "**/__tests__/*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-non-null-assertion": 0
        }
      }
    ]
  }
}
