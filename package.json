{
  "name": "fuco",
  "version": "1.2.0",
  "description": "Functional Component like React, but for Web Components",
  "main": "core/fuco.js",
  "module": "core/fuco.mjs",
  "typings": "core/index.d.ts",
  "files": [
    "core",
    "html",
    "server",
    "shared",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "npm run -s test:mocha && npm run -s test:karma",
    "test:mocha": "TS_NODE_PROJECT=tsconfig.test.json mocha -r ts-node/register src/**/__tests__/**/*.spec.ts",
    "test:karma": "karma start",
    "lint": "tsc --noEmit && eslint src --ext .ts",
    "fmt": "prettier --write 'src/**/*'",
    "clean": "rm -fr core html server shared coverage",
    "distclean": "npm run clean && rm -fr node_modules package-lock.json",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [
    "webcomponents",
    "lit-html",
    "hooks"
  ],
  "author": "Keisuke Watanabe",
  "license": "MIT",
  "homepage": "https://github.com/wtnbass/fuco",
  "repository": "wtnbass/fuco",
  "devDependencies": {
    "@types/chai": "4.2.7",
    "@types/mocha": "5.2.7",
    "@types/sinon": "7.5.1",
    "@typescript-eslint/eslint-plugin": "2.13.0",
    "@typescript-eslint/parser": "2.13.0",
    "chai": "4.2.0",
    "codecov": "3.6.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "istanbul-instrumenter-loader": "3.0.1",
    "karma": "4.4.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "2.1.1",
    "karma-firefox-launcher": "1.2.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-webpack": "4.0.2",
    "mocha": "6.2.2",
    "prettier": "1.19.1",
    "rollup": "1.27.14",
    "rollup-plugin-filesize": "6.2.1",
    "rollup-plugin-terser": "5.1.3",
    "rollup-plugin-typescript2": "0.25.3",
    "sinon": "8.0.1",
    "ts-loader": "6.2.1",
    "ts-node": "8.5.4",
    "typescript": "3.7.4",
    "webpack": "4.41.5"
  }
}