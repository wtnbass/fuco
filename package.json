{
  "name": "fuco",
  "version": "1.2.0",
  "description": "Functional Component like React, but for Web Components",
  "main": "core/fuco.js",
  "module": "core/fuco.mjs",
  "typings": "core/index.d.ts",
  "files": [
    "core",
    "html",
    "server",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "run-s lint build testall",
    "testall": "run-p test:*",
    "test:node": "TS_NODE_PROJECT=tsconfig.test.json nyc mocha src/**/__tests__/**/*.spec.ts",
    "test:browser": "karma start",
    "filesize": "cat core/fuco.js | gzip -9 | wc -c",
    "lint": "tsc --noEmit && eslint src --ext .ts",
    "fmt": "prettier --write 'src/**/*'",
    "clean": "rimraf core html server coverage",
    "distclean": "npm run clean && rm -fr node_modules package-lock.json",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [
    "webcomponents",
    "lit-html",
    "hooks"
  ],
  "author": "Keisuke Watanabe",
  "license": "MIT",
  "homepage": "https://github.com/wtnbass/fuco",
  "repository": "wtnbass/fuco",
  "devDependencies": {
    "@types/chai": "4.2.7",
    "@types/mocha": "5.2.7",
    "@types/sinon": "7.5.1",
    "@typescript-eslint/eslint-plugin": "2.15.0",
    "@typescript-eslint/parser": "2.15.0",
    "chai": "4.2.0",
    "codecov": "3.6.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "istanbul-instrumenter-loader": "3.0.1",
    "karma": "4.4.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "2.1.1",
    "karma-firefox-launcher": "1.3.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-webpack": "4.0.2",
    "mocha": "7.0.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "rollup": "1.29.0",
    "rollup-plugin-terser": "5.2.0",
    "rollup-plugin-typescript2": "0.25.3",
    "sinon": "8.0.4",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.1",
    "typescript": "3.7.4",
    "webpack": "4.41.5"
  },
  "mocha": {
    "require": "ts-node/register"
  },
  "nyc": {
    "reporter": [
      "lcovonly"
    ],
    "report-dir": "./coverage/node",
    "temp-dir": "./node_modules/.temp/.nyc_output"
  }
}